@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity
@using App.Domain.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BattleBrushProgress</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/swagger">Api</a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link text-dark">|</span>
                    </li>
                    
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Miniature" asp-action="Index">@Base.Resources.Common.Miniature</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="MiniFaction" asp-action="Index">@Base.Resources.Common.MiniFaction</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="MiniManufacturer" asp-action="Index">@Base.Resources.Common.MiniManufacturer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="MiniProperties" asp-action="Index">@Base.Resources.Common.MiniProperties</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="MiniState" asp-action="Index">@Base.Resources.Common.MiniState</a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link text-dark">|</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Paint" asp-action="Index">@Base.Resources.Common.Paint</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Brand" asp-action="Index">@Base.Resources.Common.Brand</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="PaintLine" asp-action="Index">@Base.Resources.Common.PaintLine</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="PaintType" asp-action="Index">@Base.Resources.Common.PaintType</a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link text-dark">|</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="MiniatureCollection" asp-action="Index">@Base.Resources.Common.MiniatureCollection</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="PersonPaints" asp-action="Index">@Base.Resources.Common.UserPaints</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="MiniPaintSwatch" asp-action="Index">@Base.Resources.Common.MiniPaintSwatch</a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link text-dark">|</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Person" asp-action="Index">@Base.Resources.Common.User</a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link text-dark">|</span>
                    </li>
                    }
                    
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@Base.Resources.Common.Privacy</a>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link text-dark">|</span>
                    </li>
                    
                    <partial name="_LanguageSelection"/>
                    
                </ul>
                <partial name="_LoginPartial"/>
                
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - BattleBrushProgress - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> |
        <a href="/swagger">Api</a> | 
        @Thread.CurrentThread.CurrentCulture.Name | @Thread.CurrentThread.CurrentUICulture.Name
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>