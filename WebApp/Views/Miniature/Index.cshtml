@model IEnumerable<App.Domain.Miniature>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MiniName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiniDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiniFaction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiniProperties)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiniManufacturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MiniName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiniDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiniFaction.FactionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiniProperties.PropertyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiniManufacturer.ManufacturerName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
