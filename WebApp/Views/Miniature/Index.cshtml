@model IEnumerable<App.BLL.DTO.Miniature>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">@Base.Resources.Common.CreateNew</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MiniName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiniDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiniFaction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiniProperties)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiniManufacturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MiniName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiniDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiniFaction!.FactionDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiniProperties!.PropertyDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiniManufacturer!.ContactEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Base.Resources.Common.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Base.Resources.Common.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Base.Resources.Common.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
