@model IEnumerable<App.Domain.Miniature>

@{
    ViewData["Title"] = "Miniatures";
}

<h1>Miniatures</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.MiniName)</th>
        <th>@Html.DisplayNameFor(model => model.MiniDesc)</th>
        <th>@Html.DisplayNameFor(model => model.MiniFaction)</th>
        <th>@Html.DisplayNameFor(model => model.MiniProperties)</th>
        <th>@Html.DisplayNameFor(model => model.MiniManufacturer)</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MiniName)</td>
            <td>@Html.DisplayFor(modelItem => item.MiniDesc)</td>
            <td>@Html.DisplayFor(modelItem => item.MiniFaction!.FactionName)</td>
            <td>@Html.DisplayFor(modelItem => item.MiniProperties!.PropertyName)</td>
            <td>@Html.DisplayFor(modelItem => item.MiniManufacturer!.ManufacturerName)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>