@model App.Domain.Miniature

@{
    ViewData["Title"] = "Delete Miniature";
}

<h1>Delete Miniature</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this miniature?</h3>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MiniName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.MiniName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MiniDesc)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.MiniDesc)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MiniFaction)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.MiniFaction!.FactionName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MiniProperties)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.MiniProperties!.PropertyName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MiniManufacturer)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.MiniManufacturer!.ManufacturerName)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>