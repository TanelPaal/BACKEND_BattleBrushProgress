@model IEnumerable<App.BLL.DTO.MiniatureCollection>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">@Base.Resources.Common.CreateNew</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CollectionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CollectionDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcquisitionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompletionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Miniature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiniState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            @* <th> *@
            @*     @Html.DisplayNameFor(model => model.User) *@
            @* </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CollectionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CollectionDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcquisitionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Miniature!.MiniName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiniState!.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person!.PersonName)
            </td>
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => item.User!.Id) *@
            @* </td> *@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Base.Resources.Common.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Base.Resources.Common.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Base.Resources.Common.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
