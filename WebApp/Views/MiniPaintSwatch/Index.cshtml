@model IEnumerable<App.BLL.DTO.MiniPaintSwatch>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">@Base.Resources.Common.CreateNew</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UsageType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiniatureCollection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonPaints)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UsageType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiniatureCollection!.CollectionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonPaints!.Paint!.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Base.Resources.Common.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Base.Resources.Common.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Base.Resources.Common.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
